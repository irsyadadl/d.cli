{
  "name": "@irsyadadl/d",
  "type": "module",
  "version": "0.1.5",
  "description": "A CLI for D",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/irsyadadl/d.cli"
  },
  "homepage": "https://d.irsyad.co",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "start": "tsc && npm link",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky",
    "release": "release-it"
  },
  "bin": {
    "@irsyadadl/d": "./dist/index.js"
  },
  "keywords": [
    "cli",
    "D.",
    "design-system"
  ],
  "author": "Irsyad A. Panjaitan",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.10",
    "prettier": "^3.3.2",
    "release-it": "^17.4.1",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^5.1.2",
    "commander": "^12.1.0",
    "husky": "^9.0.11"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "publishConfig": {
      "access": "public",
      "registry": "https://npm.pkg.github.com"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "section": "Chores"
            }
          ]
        }
      }
    }
  }
}
